{
  "zenMode.fullScreen": false,
  "zenMode.centerLayout": false,
  "files.associations": {
    "*.wiki": "markdown"
  },
  "zenMode.hideStatusBar": false,
  "explorer.confirmDelete": false,
  "zenMode.hideLineNumbers": false,
  "explorer.confirmDragAndDrop": false,
  "rewrap.wrappingColumn": 100,

  //    FONTS
  //---------------------------
  "editor.fontFamily": "OperatorMono-Book, Fira Code, Victor Mono, Menlo, Monaco, 'Courier New', monospace",
  // Enables/Disables font ligatures.
  "editor.fontLigatures": true,
  // Controls the font weight.
  "editor.fontWeight": "400", //Normal = 400
  
  //    MISC
  //---------------------------
  "workbench.settings.useSplitJSON": true,
  "search.useIgnoreFiles": false,
  "editor.largeFileOptimizations": false,
  "editor.dragAndDrop": false,
  "workbench.startupEditor": "newUntitledFile",
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  // SideBar Location
  "workbench.sideBar.location": "right",
  "jupyter.interactiveWindow.textEditor.executeSelection": false,
  
  //    VIM
  //---------------------------
  "vim.textwidth": 100,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 100,
  "vim.camelCaseMotion.enable": true,
  "vim.visualModeKeyBindings": [
    {
      "before": ["<C-`>"],
      "after": ["<Esc>"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["<C-`>"],
      "after": ["<Esc>"]
    }
  ],
  "vim.neovimPath": "/usr/local/bin/nvim",
  
  //    JAVASCRIPT
  //---------------------------
  // Eslint configuration
  // https://eslint.vuejs.org/user-guide/#faq
  // Vetur
  "vetur.validation.template": false,
  "eslint.validate": ["javascript", "vue", "html"],
  // "editor.codeActionsOnSave": {
  //   "source.fixAll": true,
  //   "source.fixAll.eslint": true
  // },
  // General formatting
  // "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.requireConfig": true,
  "prettier.singleQuote": true,
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": { 
    "editor.formatOnSave": true ,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
  },
  //    PYTHON
  //---------------------------
  // Python interpreter
  "python.defaultInterpreterPath": "/Users/fer/mambaforge/envs/dsfull/bin/python3",
  
  // Python formatting
  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
  },
  "isort.args": [
    "--profile=black"
  ],
  "flake8.args": [
    "--max-line-length=88",
    "--ignore=E402"
  ],
  "pylint.args": [
    "--good-names=x,y,z,i,j,n,f,e,df,r"
  ],
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": false,
    "scminput": false
  },
  "terminal.integrated.inheritEnv": false,
  "svelte.enable-ts-plugin": true,
  "github.copilot.editor.enableAutoCompletions": false,
  "[jupyter]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  //    C-LANG
  //---------------------------
  // Python interpreter
  "[c]": {
    "editor.formatOnSave": true,
  },
  "window.customTitleBarVisibility": "windowed",
  "notebook.formatOnSave.enabled": true,
  "editor.minimap.enabled": false,
  "notebook.cellToolbarLocation": {
    "default": "hidden"
  },
  "notebook.insertToolbarLocation": "notebookToolbar",
  "notebook.showCellStatusBar": "hidden",
  //    RUST
  //---------------------------
  "[rust]": {
    "editor.formatOnSave": true,
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode",
    "editor.formatOnSave": true,
  },
  //    JUPYTER
  //---------------------------
  "jupyter.askForKernelRestart": false,
  "notebook.output.wordWrap": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "github.copilot.nextEditSuggestions.enabled": true,
}